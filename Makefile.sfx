ROMBASESFXDIR:=$(notdir $(SOUNDFXDIR))

SNDFXFILES:=
ifneq (,$(wildcard $(SOUNDFXDIR)))
	SNDFXFILES += $(shell find $(SOUNDFXDIR)/ -name '*.wav' | sed -e 's,'$(SOUNDFXDIR)',$(ROMDBASEPATH)/$(ROMBASESFXDIR),g')

$(ROMDBASEPATH)/$(ROMBASESFXDIR)/%.wav: assets/sfx/%.wav
	@mkdir -p $(shell dirname $@)
	cp $< $@
endif
